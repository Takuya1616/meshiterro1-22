<div class="profile-container">
  <h3 class="profile-name"><%= @user.name %></h3>

<% if @user.profile_image.attached? %>
 <%= image_tag @user.profile_image %>
 <% else %>
 <%= image_tag 'no_image' %>
 <% end %>
  <% if @user == current_user %>
   <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>

